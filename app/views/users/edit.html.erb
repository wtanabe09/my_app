<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">プロフィール編集</h5>
      <div class="form-body p-4">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= link_to "メールアドレス・パスワードを編集する", edit_user_registration_path %>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group mb-3 mt-4">
            <h5 class="form-label">ユーザーネーム</h5>
            <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control", placeholder: "名前" %>
          </div>
          <div class="form-group mb-3 mt-4">
            <h5 class="form-label">プロフィール</h5>
            <%= f.text_area :profile, autofocus: true, id:"inputProfile",class:"form-control", rows:"5", placeholder: "プロフィール" %>
          </div>
          
          <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>