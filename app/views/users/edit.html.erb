<h1>編集</h1>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "名前" %>
  <label for="inputProfile">プロフィール</label>
  <%= f.text_area :profile, autofocus: true, id:"inputProfile", placeholder: "プロフィール" %>

  <%= f.submit "変更を保存" %>
<% end %>