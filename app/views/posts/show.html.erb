<div class="card col-md-6 mx-auto h-100 p-2 mt-4 shadow-lg">
  <div class="card-body">
    <%= link_to "戻る", posts_path, class:"btn btn-info mb-4" %>
    <div class="post-body">
      <p class="mb-0">タイトル</p>
      <p class="border"><%= @post.title %></p>
      <p class="mb-0">説明</p>
      <p class="border"><%= @post.description %></p>
      <p class="mb-0">これからどうする？</p>
      <p class="border"><%= @post.action %></p>
      <p>
        <%= link_to user_path(@post.user) do %>
          <span class="mr-1"><i class="fas fa-user"></i><%= @post.user.name %><span>
        <% end %>
        ：<%= @post.created_at.strftime('%Y/%m/%d') %>
      </p>
      <% if @post.user_id == current_user.id %>
        <%= link_to "削除", post_path(@post), method: :delete,data: { confirm: "投稿を削除してもよろしいですか？" }, class:"btn btn-danger mr-2" %> 
        <%= link_to "編集", edit_post_path(@post),class:"btn btn-success" %>
      <% end %> 
    </div> 
  </div>
</div>
