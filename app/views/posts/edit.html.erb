<h1>Trash編集</h1>
<%= link_to "戻る", posts_path %>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <% @post.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%=form_with model:@post, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>説明</h4>
  <%= f.text_area :description %>
  <h4>これからどうする？</h4>
  <%= f.text_field :action %>

  <%= f.submit '保存' %>
<% end %>